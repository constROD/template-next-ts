{
  "name": "template-next-ts",
  "version": "0.3.0",
  "repository": "https://github.com/constrod/template-next-ts",
  "bugs": {
    "url": "https://github.com/constrod/template-next-ts/issues"
  },
  "contributors": [
    {
      "name": "Rodrick Alcantara",
      "url": "https://github.com/constROD"
    }
  ],
  "description": "Custom Template for Next TypeScript",
  "author": "Rodrick Alcantara <rialcantara21@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "clean": "rm -rf ./.next && rm -rf ./out",
    "build": "pnpm clean && next build",
    "preview": "next start",
    "encode:env": "cat .env | base64 -w 0 > .env-encoded",
    "docker:local": "docker compose",
    "docker:prod": "docker compose -f docker-compose.prod.yaml",
    "start": "next start",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write ./src/**/*.ts{,x}",
    "lint": "eslint ./src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint ./src --fix --ext .js,.ts,.jsx,.tsx",
    "git:dev": "git checkout develop && git pull origin develop && git branch | grep -v \"main\\|staging\\|develop\" | xargs git branch -D",
    "pre-commit": "lint-staged --allow-empty",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "immer": "^9.0.15",
    "lodash": "^4.17.21",
    "next": "12.3.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-use": "^17.4.0",
    "sharp": "^0.31.0",
    "styled-components": "^5.3.5",
    "yup": "^0.32.11",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@next/eslint-plugin-next": "^12.3.1",
    "@svgr/webpack": "^6.2.1",
    "@testing-library/react": "^13.4.0",
    "@types/lodash": "^4.14.190",
    "@types/node": "17.0.36",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.5",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitest/coverage-c8": "^0.25.6",
    "@vitest/ui": "^0.25.6",
    "autoprefixer": "^10.4.8",
    "cspell": "^6.14.3",
    "eslint": "8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "6",
    "jsdom": "^20.0.3",
    "lint-staged": "^12.4.2",
    "postcss": "^8.4.16",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.1.8",
    "typescript": "4.7.2",
    "vite-tsconfig-paths": "^4.0.2",
    "vitest": "^0.25.6"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  }
}
