{
  "name": "template-next-ts",
  "version": "0.0.0",
  "repository": "https://github.com/constrod/template-next-ts",
  "bugs": {
    "url": "https://github.com/constrod/template-next-ts/issues"
  },
  "contributors": [
    {
      "name": "Rodrick Alcantara",
      "url": "https://github.com/constROD"
    }
  ],
  "description": "Custom Template for Next TypeScript",
  "author": "Rodrick Alcantara <rialcantara21@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "clean": "rm -rf ./.next && rm -rf ./out",
    "build": "pnpm clean && next build",
    "release": "changeset tag",
    "preview": "next start",
    "start": "next start",
    "test": "vitest --single-thread",
    "test:coverage": "pnpm run test --coverage --watch=false",
    "format": "prettier --write ./src/**/*.ts{,x}",
    "lint": "eslint ./src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint ./src --fix --ext .js,.ts,.jsx,.tsx",
    "lint:types": "tsc",
    "lint:spell": "git diff --cached --name-only | npx cspell --no-summary --no-progress --no-must-find-files --file-list stdin",
    "ci:lint": "concurrently \"pnpm lint\" \"pnpm lint:types\" \"pnpm lint:spell\"",
    "ci:test": "pnpm test:coverage",
    "pre-commit": "concurrently \"lint-staged --allow-empty\" \"pnpm lint:spell\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.1.0",
    "@tanstack/react-query": "^4.29.12",
    "axios": "^1.4.0",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "immer": "^9.0.21",
    "lodash": "^4.17.21",
    "next": "13.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.44.3",
    "react-use": "^17.4.0",
    "sass": "^1.63.2",
    "sharp": "^0.31.3",
    "zod": "^3.21.4",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@next/eslint-plugin-next": "^12.3.4",
    "@svgr/webpack": "^6.5.1",
    "@tanstack/react-query-devtools": "^4.29.12",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^18.16.16",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.31.4",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.1.0",
    "cspell": "^6.31.1",
    "eslint": "8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.11.0",
    "husky": "^6.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^12.5.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.4"
  }
}
